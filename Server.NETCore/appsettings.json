{
	"Logging": {
		"IncludeScopes": false,
		"LogLevel": {
			"Default": "Warning"
		}
	},

	// Server identifier, used mostly for data protection key stores.
	// supported values: any string
	// default: none (you must provide value)

	"ServerId": "pbXStorage0"

	// Connection string to main database.
	// syntax: provider;connection string
	// supported providers: SQlite, SqlServer
	// default: SQlite database named %ServerId%.db in current directory

	//"MainDb": "SqlServer;Server=(localdb)\\mssqllocaldb;Database=%ServerId%;Trusted_Connection=True;MultipleActiveResultSets=true",
	//"MainDb": "SQlite;Data Source=%ContentRootPath%/%ServerId%/%ServerId%.db",

	// Connection string to repositories database.
	// syntax: provider;connection string
	// supported providers: DbOnFileSystem
	// default: repositories will be stored in the main database

	//"RepositoriesDb": "DbOnFileSystem;%ContentRootPath%/%ServerId%"

	// REMARKS:
	// You can use in connection strings:
	//      - variable named %ServerId%
	//		- any environment variable (like %HOME%, %USERPROFILE%, etc.)
	//      - variable named %ContentRootPath% which will be expanded to content directory (current directory or directory given on the command line)
}
